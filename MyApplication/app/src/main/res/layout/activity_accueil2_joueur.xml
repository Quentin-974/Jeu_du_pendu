<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.valentin.apppendu.Activity.Accueil2Joueurs">

    <TextView
        android:id="@+id/titre2Joueurs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/titre2Joueur"
        android:layout_centerHorizontal="true"
        android:textSize="50dp"/>

    <View
        android:id="@+id/barre"
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:layout_marginTop="30dip"
        android:layout_marginBottom="15dip"
        android:layout_below="@id/titre2Joueurs"
        android:background="#0000FF" />

    <TextView
        android:id="@+id/libelleJoueur1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nomJoueur1"
        android:layout_below="@id/barre"
        android:layout_marginTop="@dimen/margeTopTitre"
        android:textSize="@dimen/tailleLibelle"/>

    <EditText
        android:id="@+id/nomJoueur1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/libelleJoueur1"
        android:layout_alignBaseline="@id/libelleJoueur1"/>

    <TextView
        android:id="@+id/libelleJoueur2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nomJoueur2"
        android:layout_below="@id/libelleJoueur1"
        android:layout_marginTop="@dimen/margeTopTitre"
        android:textSize="@dimen/tailleLibelle"/>

    <EditText
        android:id="@+id/nomJoueur2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/libelleJoueur2"
        android:layout_alignBaseline="@id/libelleJoueur2"/>

    <TextView
        android:id="@+id/texteNombreMots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nombreMots"
        android:layout_below="@id/libelleJoueur2"
        android:layout_marginTop="@dimen/margeTopNumberP"
        android:textSize="@dimen/tailleLibelle"/>

    <NumberPicker
        android:id="@+id/nombreMots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margeLeftNumberP"
        android:layout_toRightOf="@id/texteNombreMots"
        android:layout_below="@id/libelleJoueur2"
        android:scaleX="0.8"
        android:scaleY="0.8"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="Precedent "
        android:layout_alignParentBottom="true"
        android:onClick="pagePrecedente"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="Suivant "
        android:onClick="pageSuivante"/>
</RelativeLayout>
